# Rename this to ".bashrc" in $HOME for my minimal bash environment

# I hate color terminals.
export TERM="xterm-mono"

# Source global definitions
if [ -f /etc/bashrc ]; then
  . /etc/bashrc
fi

# I used emacs for years. I like vi better now.
set -o vi

# My standard path
for D in $HOME/bin /usr/local/bin /usr/bin /usr/local/sbin /usr/sbin /sbin /bin; do :
  if ! [[ "$PATH" =~ "$D" ]]; then export PATH="$HOME/bin:$PATH"; fi
done

# I don't use many aliases.
unalias -a
alias ls="ls -F"
